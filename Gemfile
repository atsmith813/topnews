source 'https://rubygems.org'

ruby File.read('.ruby-version').chomp

gem 'coffee-rails'
gem 'devise'
gem 'haml'
gem 'jbuilder'
gem 'pg'
gem 'pry-rails'
gem 'puma'
gem 'rails', '~> 7.0.3'
gem 'rspec-rails'
gem 'sass-rails'
gem 'tailwindcss-rails', '~> 2.0' # Add Tailwind - a CSS framework
gem 'turbolinks'
gem 'tzinfo-data', platforms: [:mingw, :mswin, :x64_mingw, :jruby]
